.nav-box
  height:100vh
  z-index:5
  position: fixed
.nav
  position: fixed
  top:0
  left:0
  box-sizing: border-box
  width:300px
  background-color:#fff
  z-index:5
  bottom:0
.personal-menu
  background-color:#21b0f5
  padding:0 20px
  box-sizing: border-box
  color:#fff
  display: flex
  flex-wrap: wrap
  align-items: center
  height: 100px

.personal-message
  display: flex
  align-items: center
  font-size:14px
  width:100%
.personal-img
  display:block
  width:32px
  height:32px
  border-radius: 50%
  margin-right: 10px
.personal-link
  display: flex
  justify-content: space-around
  width:100%
  li
    display: block
    width:50%
    height:40px
    line-height: 40px
    .iconfont
      margin-right: 15px
nav
  li
    width:100%
    height: 50px
    line-height: 50px
    a
      width: 100%;
      display: block;
      text-decoration: none;
      color: #333;
      padding:0 10px
      box-sizing: border-box
      &.active
        background-color:#eee
.router-link-active
  background-color:#eee
.wrapper
  position:fixed
  top:0
  left:0
  right:0
  bottom:0
  background-color:rgba(0,0,0,0.5)
  z-index:4

