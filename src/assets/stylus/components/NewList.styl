.new-list
  width: 100%
  box-sizing: border-box
  padding:0 10px
.time
  line-height: 50px
  color:#ccc
  font-size:12px
.item
  width: 100%
  display: flex
  box-sizing: border-box
  border-radius: 6px
  padding:15px
  background-color:#fff
  margin-bottom: 10px
  justify-content: space-between
  border:1px solid #eaeaea
  box-shadow: 0 2px 1px -1px #aba6a6;
  &:last-of-type
    margin-bottom: 0
.item-title
  width:60%
  line-height: 20px
.image-wrapper
  position relative
  width:23%
  height:70px
  img
    width: 100%
    height:100%
    background-color:#ccc